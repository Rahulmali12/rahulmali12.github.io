    <script>
        // ===========================================
        // üîí SECURITY & ATTEMPT LOGIC
        // ===========================================
        
        const MAX_ATTEMPTS = 2; // ‡§è‡§ï ‡§¶‡§ø‡§® ‡§Æ‡•á‡§Ç 2 ‡§ü‡•á‡§∏‡•ç‡§ü
        const TODAY_KEY = "exam_attempts_" + new Date().toDateString(); // ‡§Ü‡§ú ‡§ï‡•Ä ‡§§‡§æ‡§∞‡•Ä‡§ñ ‡§ï‡•Ä ‡§ö‡§æ‡§¨‡•Ä

        function checkAttempts() {
            let attempts = localStorage.getItem(TODAY_KEY) || 0;
            attempts = parseInt(attempts);

            const msgBox = document.getElementById('attempt-msg');
            const btn = document.getElementById('start-btn');

            if(attempts >= MAX_ATTEMPTS) {
                // ‡§ï‡•ã‡§ü‡§æ ‡§ñ‡§§‡•ç‡§Æ
                msgBox.innerHTML = `<span style="color:red">‚õî ‡§Ü‡§ú ‡§ï‡•Ä ‡§≤‡§ø‡§Æ‡§ø‡§ü (2/2) ‡§™‡•Ç‡§∞‡•Ä ‡§π‡•ã ‡§ó‡§à ‡§π‡•à‡•§ ‡§ï‡•É‡§™‡§Ø‡§æ ‡§ï‡§≤ ‡§™‡•ç‡§∞‡§Ø‡§æ‡§∏ ‡§ï‡§∞‡•á‡§Ç‡•§</span>`;
                btn.disabled = true;
                btn.style.background = "#ccc";
                btn.innerText = "Locked for Today";
            } else {
                // ‡§ï‡•ã‡§ü‡§æ ‡§¨‡§æ‡§ï‡•Ä ‡§π‡•à
                msgBox.innerHTML = `<span style="color:green">‚úÖ ‡§Ü‡§ú ‡§ï‡•á ‡§™‡•ç‡§∞‡§Ø‡§æ‡§∏ ‡§∂‡•á‡§∑: ${MAX_ATTEMPTS - attempts} / ${MAX_ATTEMPTS}</span>`;
            }
        }

        // ‡§´‡•Å‡§≤ ‡§∏‡•ç‡§ï‡•ç‡§∞‡•Ä‡§® ‡§Æ‡•á‡§Ç ‡§ú‡§æ‡§®‡•á ‡§ï‡§æ ‡§´‡§Ç‡§ï‡•ç‡§∂‡§®
        function goFullScreen() {
            // Attempt ‡§¨‡•ù‡§æ‡§ì
            let attempts = localStorage.getItem(TODAY_KEY) || 0;
            localStorage.setItem(TODAY_KEY, parseInt(attempts) + 1);

            // UI ‡§π‡§ü‡§æ‡§ì
            document.getElementById('start-overlay').style.display = 'none';

            // Fullscreen Request
            const elem = document.documentElement;
            if (elem.requestFullscreen) {
                elem.requestFullscreen();
            } else if (elem.webkitRequestFullscreen) { /* Safari */
                elem.webkitRequestFullscreen();
            }

            // ‡§™‡§∞‡•Ä‡§ï‡•ç‡§∑‡§æ ‡§∂‡•Å‡§∞‡•Ç ‡§ï‡§∞‡•á‡§Ç
            startTimer(195 * 60);
            loadQuestion(0);
            
            // ‡§∏‡•Å‡§∞‡§ï‡•ç‡§∑‡§æ ‡§ö‡§æ‡§≤‡•Ç ‡§ï‡§∞‡•á‡§Ç
            enableSecurity();
        }

        // ===========================================
        // üö® CHEATING DETECTION SYSTEM
        // ===========================================
        
        let warningCount = 0;

        function enableSecurity() {
            // 1. ‡§Ö‡§ó‡§∞ ‡§´‡•Å‡§≤ ‡§∏‡•ç‡§ï‡•ç‡§∞‡•Ä‡§® ‡§∏‡•á ‡§¨‡§æ‡§π‡§∞ ‡§®‡§ø‡§ï‡§≤‡§æ
            document.addEventListener('fullscreenchange', () => {
                if (!document.fullscreenElement) {
                    triggerWarning();
                }
            });

            // 2. ‡§Ö‡§ó‡§∞ ‡§ü‡•à‡§¨ ‡§¨‡§¶‡§≤‡§æ (Tab Switch)
            document.addEventListener('visibilitychange', () => {
                if (document.hidden) {
                    triggerWarning();
                }
            });
        }

        function triggerWarning() {
            warningCount++;
            if(warningCount > 2) {
                alert("‡§Ü‡§™‡§®‡•á 3 ‡§¨‡§æ‡§∞ ‡§®‡§ø‡§Ø‡§Æ ‡§§‡•ã‡•ú‡§æ ‡§π‡•à‡•§ ‡§™‡§∞‡•Ä‡§ï‡•ç‡§∑‡§æ ‡§∏‡§¨‡§Æ‡§ø‡§ü ‡§ï‡•Ä ‡§ú‡§æ ‡§∞‡§π‡•Ä ‡§π‡•à‡•§");
                submitExam();
            } else {
                document.getElementById('cheat-warning').style.display = 'flex';
            }
        }

        function resumeFullScreen() {
            document.getElementById('cheat-warning').style.display = 'none';
            document.documentElement.requestFullscreen().catch(e => console.log("User rejected"));
        }


        // ===========================================
        // üìù QUESTION DATA (‡§Ø‡§π‡§æ‡§Å ‡§Ö‡§™‡§®‡•á ‡§™‡•ç‡§∞‡§∂‡•ç‡§® ‡§°‡§æ‡§≤‡•á‡§Ç)
        // ===========================================
        const questions = [
            { id: 1, sub: "Maths", q: "‡§∏‡§Æ‡§æ‡§®‡•ç‡§§‡§∞ ‡§∂‡•ç‡§∞‡•á‡§£‡•Ä 5, 8, 11... ‡§ï‡§æ 12‡§µ‡§æ‡§Ç ‡§™‡§¶ ‡§ï‡•ç‡§Ø‡§æ ‡§π‡•ã‡§ó‡§æ?", opts: ["35", "38", "41", "37"], ans: 1 },
            { id: 2, sub: "Science", q: "‡§Æ‡§æ‡§®‡§µ ‡§∂‡§∞‡•Ä‡§∞ ‡§Æ‡•á‡§Ç ‡§Ø‡•Ç‡§∞‡§ø‡§Ø‡§æ ‡§ï‡§æ ‡§®‡§ø‡§∞‡•ç‡§Æ‡§æ‡§£ ‡§ï‡§π‡§æ‡§Å ‡§π‡•ã‡§§‡§æ ‡§π‡•à?", opts: ["‡§π‡•É‡§¶‡§Ø", "‡§µ‡•É‡§ï‡•ç‡§ï", "‡§Ø‡§ï‡•É‡§§ (Liver)", "‡§Ü‡§Æ‡§æ‡§∂‡§Ø"], ans: 2 },
            { id: 3, sub: "Hindi", q: "‚Äò‡§®‡•á‡§§‡§æ‡§ú‡•Ä ‡§ï‡§æ ‡§ö‡§∂‡•ç‡§Æ‡§æ‚Äô ‡§™‡§æ‡§† ‡§ï‡•á ‡§≤‡•á‡§ñ‡§ï ‡§ï‡•å‡§® ‡§π‡•à‡§Ç?", opts: ["‡§∏‡•ç‡§µ‡§Ø‡§Ç ‡§™‡•ç‡§∞‡§ï‡§æ‡§∂", "‡§∞‡§æ‡§Æ‡§µ‡•É‡§ï‡•ç‡§∑ ‡§¨‡•á‡§®‡•Ä‡§™‡•Å‡§∞‡•Ä", "‡§Ø‡§∂‡§™‡§æ‡§≤", "‡§Æ‡§®‡•Å ‡§≠‡§Ç‡§°‡§æ‡§∞‡•Ä"], ans: 0 },
            { id: 4, sub: "Sanskrit", q: "‚Äò‡§µ‡§ø‡§¶‡•ç‡§Ø‡§Ø‡§æ ‡§Ö‡§Æ‡•É‡§§‡§Æ‡§∂‡•ç‡§®‡•Å‡§§‡•á‚Äô - ‡§Ø‡§π ‡§™‡§Ç‡§ï‡•ç‡§§‡§ø ‡§ï‡§ø‡§∏ ‡§â‡§™‡§®‡§ø‡§∑‡§¶ ‡§∏‡•á ‡§π‡•à?", opts: ["‡§ï‡§†‡•ã‡§™‡§®‡§ø‡§∑‡§¶", "‡§à‡§∂‡§æ‡§µ‡§æ‡§∏‡•ç‡§Ø‡•ã‡§™‡§®‡§ø‡§∑‡§¶", "‡§Æ‡•Å‡§£‡•ç‡§°‡§ï‡•ã‡§™‡§®‡§ø‡§∑‡§¶", "‡§™‡•ç‡§∞‡§∂‡•ç‡§®‡•ã‡§™‡§®‡§ø‡§∑‡§¶"], ans: 1 },
            { id: 5, sub: "S.St", q: "‡§≠‡§æ‡§∞‡§§ ‡§Æ‡•á‡§Ç '‡§™‡•ç‡§∞‡•ã‡§ú‡•á‡§ï‡•ç‡§ü ‡§ü‡§æ‡§á‡§ó‡§∞' ‡§ï‡•Ä ‡§∂‡•Å‡§∞‡•Å‡§Ü‡§§ ‡§ï‡§ø‡§∏ ‡§µ‡§∞‡•ç‡§∑ ‡§π‡•Å‡§à?", opts: ["1971", "1972", "1973", "1974"], ans: 2 }
        ];

        let currentIdx = 0;
        let userAns = new Array(questions.length).fill(null);

        function loadQuestion(idx) {
            currentIdx = idx;
            const data = questions[idx];
            
            document.getElementById('q-num').innerText = idx + 1;
            document.getElementById('subject-tag').innerText = data.sub;
            document.getElementById('question-text').innerText = data.q;
            
            const area = document.getElementById('options-area');
            area.innerHTML = "";
            
            data.opts.forEach((opt, i) => {
                const checked = userAns[idx] === i ? 'checked' : '';
                area.innerHTML += `
                    <label class="opt-label">
                        <input type="radio" name="opt" onclick="saveAnswer(${i})" ${checked}>
                        ${String.fromCharCode(65+i)}. ${opt}
                    </label>
                `;
            });
            
            updatePalette();
        }

        function saveAnswer(optIdx) {
            userAns[currentIdx] = optIdx;
            updatePalette();
        }

        function updatePalette() {
            const grid = document.getElementById('palette-grid');
            grid.innerHTML = "";
            questions.forEach((q, i) => {
                const statusClass = userAns[i] !== null ? 'done' : '';
                const activeClass = i === currentIdx ? 'active' : '';
                grid.innerHTML += `<div class="p-box ${statusClass} ${activeClass}" onclick="loadQuestion(${i})">${i+1}</div>`;
            });
        }

        function startTimer(duration) {
            let t = duration;
            setInterval(() => {
                let h = Math.floor(t/3600);
                let m = Math.floor((t%3600)/60);
                let s = t%60;
                document.getElementById('timer').innerText = 
                    `${h<10?'0'+h:h}:${m<10?'0'+m:m}:${s<10?'0'+s:s}`;
                if(t <= 0) submitExam();
                t--;
            }, 1000);
        }

        function submitExam() {
            // ‡§¨‡§æ‡§π‡§∞ ‡§®‡§ø‡§ï‡§≤‡§®‡•á ‡§ï‡•á ‡§≤‡§ø‡§è ‡§≤‡•â‡§ï ‡§ñ‡•ã‡§≤‡•á‡§Ç
            document.removeEventListener('fullscreenchange', triggerWarning); 
            if(document.exitFullscreen) document.exitFullscreen();
            
            let score = 0;
            userAns.forEach((a, i) => { if(a === questions[i].ans) score++; });
            alert(`‡§™‡§∞‡•Ä‡§ï‡•ç‡§∑‡§æ ‡§∏‡§Æ‡§æ‡§™‡•ç‡§§!\n‡§Ü‡§™‡§ï‡§æ ‡§∏‡•ç‡§ï‡•ã‡§∞: ${score} / ${questions.length}\n‡§™‡•ç‡§∞‡§§‡§ø‡§∂‡§§: ${(score/questions.length)*100}%`);
            location.reload();
        }

        // Initialize
        checkAttempts();
        updatePalette();

    </script>
</body>
</html>
